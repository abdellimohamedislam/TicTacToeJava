            android:backgroundTint="#E90C0C"

            android:onClick="tapPlayer"
            android:tag="22"
            android:text="@string/xo"

            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />
